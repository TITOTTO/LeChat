



<div class="container px-3 my-5 clearfix">

    <!-- Shopping cart table -->
    <div class="card">
        <div class="card-header">
            <h2>Panier de l'utilisateur</h2>
          
        </div>
        <div class="card-body">
        <% @cart.articles.each do |article|%>    
        

            <div class="table-responsive">
              <table class="table table-bordered m-0">
                <thead>
                  <tr>
                    <!-- Set columns width -->
                    <th class="text-center py-3 px-4" style="min-width: 400px;">Vos Achats</th>
                    <th class="text-right py-3 px-4" style="width: 100px;">Prix</th>
                    <th class="text-center py-3 px-4" style="width: 120px;">Quantité</th>
                    <th class="text-right py-3 px-4" style="width: 100px;">Total</th>
                    <th class="text-center align-middle py-3 px-0" style="width: 40px;"><a href="#" class="shop-tooltip float-none text-light" title="" data-original-title="Clear cart"><i class="ino ion-md-trash"></i></a></th>
                  </tr>
                </thead>
                <tbody>
                
                  <tr>
                                   
                    <td class="p-4">
                      <div class="media align-items-center">
                        <img src="" class="d-block ui-w-40 ui-bordered mr-4" alt="">
                        <div class="media-body">
                          <a href="#" class="d-block text-dark">
                        </a>
                          <small>
                            <span class="text-muted">Race de ton chat :  </span><%= article.description %>    
                          </small>
                        </div>
                      </div>
                    </td>
                    <td class="text-right font-weight-semibold align-middle p-4"><%= article.price %></td>
                    <td class="align-middle p-4"><input type="text" class="form-control text-center" value="1"></td>
                    <td class="text-right font-weight-semibold align-middle p-4"><%= article.price%></td>
                    <td class="text-center align-middle px-0"><a href="#" class="shop-tooltip close float-none text-danger" title="" data-original-title="Remove">×</a></td>                
                   <% end %>  
                  </tr>                 
                </tbody>
              </table>
            </div>
            <!-- / Shopping cart table -->
        
            <div class="d-flex flex-wrap justify-content-between align-items-center pb-4">
            
              <div class="mt-4">
                <label class="text-muted font-weight-normal">Code Promo</label>
                <input type="text" placeholder="ici ton code" class="form-control">
              </div>              
                <div class="text-right mt-4">
                 
                  <label class="text-muted font-weight-normal m-0">Total</label>
                
                  <div class="text-large"><strong> <%= @total %>  </strong></div>
                
                </div>
              </div>
              
            </div>         
        
          </div>          
      </div>
     
  </div>