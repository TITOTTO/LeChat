

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>

<div class="container">
<div class="row flex-center align-items-center">
        <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
            <!-- Profile picture card-->
            <div class="card border-0 shadow rounded-3 my-5">
                <div class="card-body p-4 p-sm-5 text-center">
                  <h5 class="card-title text-center mb-5 fw-light fs-5">Modifier l'avatar</h5>
                    <!-- Profile picture image-->
                    <%if @user.avatar.attached?%>
      <%= image_tag @user.avatar, alt: 'avatar', class:'img-fluid rounded-pill', style:'height:10rem ; width:10rem' %>
    <%else%>
      <p>=== Il n'y a pas encore d'avatar lié à cet utilisateur ===</p>
    <%end%>

    <%= form_tag profile_avatars_path(@user), multipart: true do %>
      <%= file_field_tag :avatar %>
      <div class="small font-italic text-muted mb-4">JPG or PNG no larger than 5 MB</div>
      <%= submit_tag "Sauvgarder les changements", class:"btn btn-login btn-success hover-top border-0 fw-bold mb-3" %>
    <% end %>
                    
                    
                    
                </div>
            </div>
        </div>

        <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
        <div class="card border-0 shadow rounded-3 my-5">
          <div class="card-body p-4 p-sm-5">
            <h5 class="card-title text-center mb-5 fw-light fs-5">Modifier le mot de passe</h5>
                    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
                    <%= render "devise/shared/error_messages", resource: resource %>
                        <!-- Form Group (username)-->

                        <div class="form-floating mb-3">
                          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", id:"floatingInput", placeholder:"" %>
                          <%= f.label "Email adress", for:"floatingInput" %>

                          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
                          <% end %>
                        </div> 

                        <div class="form-floating mb-3">
    <%= f.password_field :password, autofocus:true,autocomplete: "new-password",class:"form-control", id:"floatingInput", placeholder:"" %>

    <%= f.label "New password (#{@minimum_password_length} characters minimum)", for:"floatingInput" %>
                        </div>
                        <div class="form-floating mb-3">
    <%= f.password_field :password_confirmation, autofocus:true,autocomplete: "new-password",class:"form-control", id:"floatingInput", placeholder:"" %>

    <%= f.label "Password confirmation", for:"floatingInput" %>
                        </div>
                        <div class="form-floating mb-3">
    <%= f.password_field :current_password, autofocus:true,autocomplete: "current-password",class:"form-control", id:"floatingInput", placeholder:"" %>

    <%= f.label "Current password", for:"floatingInput" %>
                        </div>
                        

                      
                      <div class="d-grid text-center">
    <%= f.submit "Update password", class:"btn btn-login btn-success hover-top border-0 fw-bold mb-3" %>
</div>
  <% end %>
                        
                    
                </div>
            </div>
        </div>
    </div>
</div>