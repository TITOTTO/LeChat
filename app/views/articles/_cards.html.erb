<% @articles.each do |article| %>
        <div class="cols ">
          <div class="card shadow-sm">
            <%=image_tag"https://thecatapi.com/api/images/get?format=src&type=jpg"%>

            <div class="card-body">
              <p class="card-text"> <%= article.title %> </p>
              <div class="d-flex justify-content-between align-items-center">
                <%= link_to "voir cette image", article_path(article), class:"btn btn-secondary my-1" %>
                <% if user_signed_in? && current_user.cart != nil %>
                <%= render partial: "articles/form_add", locals: {article: article}%>
                <% end %>
               
                
 
              </div>
            </div>
          </div>
          
        </div>
        <% end %>